{
  "name": "chesscom-style-chess-server",
  "version": "1.1.0",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/index.js",
    "start": "NODE_ENV=production node src/index.js",
    "copy-client": "rm -rf public/dist && mkdir -p public && cp -R ../client/dist public/",
    "build:all": "npm install && cd ../client && npm install && npm run build && cd ../server && npm run copy-client",
    "test": "node --test"
  },
  "dependencies": {
    "chess.js": "^1.0.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "optionalDependencies": {
    "stockfish": "^16.0.0"
  }
}